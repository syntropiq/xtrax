{
  "name": "@syntropiq/xtrax",
  "version": "1.0.0",
  "description": "Extracted reusable components for legal data processing TypeScript projects",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./pcre-utils": {
      "import": "./dist/pcre-utils/index.js",
      "types": "./dist/pcre-utils/index.d.ts"
    },
    "./template-engine": {
      "import": "./dist/template-engine/index.js",
      "types": "./dist/template-engine/index.d.ts"
    },
    "./data-processing": {
      "import": "./dist/data-processing/index.js",
      "types": "./dist/data-processing/index.d.ts"
    },
    "./typescript-project-template": "./typescript-project-template/"
  },
  "files": [
    "dist",
    "typescript-project-template"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syntropiq/xtrax.git"
  },
  "keywords": [
    "legal",
    "data-processing",
    "typescript",
    "pcre",
    "template-engine",
    "reusable-components",
    "legal-citations",
    "court-data",
    "regex"
  ],
  "author": "devlux76 <devlux76@icloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/syntropiq/xtrax/issues"
  },
  "homepage": "https://github.com/syntropiq/xtrax#readme",
  "peerDependencies": {
    "@syntropiq/libpcre-ts": "^1.0.0",
    "ajv": "^8.17.1",
    "unidecode": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.27",
    "@types/unidecode": "^1.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
